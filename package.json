{
  "name": "infinite-shipping-forecast",
  "version": "1.0.0",
  "description": "A generative web-based art piece that produces a continuous, never-ending audio stream mimicking the BBC Radio 4 Shipping Forecast",
  "type": "module",
  "scripts": {
    "dev": "npx http-server public -p 8000",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "playwright test",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.js\" \"public/**/*.{html,css}\"",
    "format:check": "prettier --check \"src/**/*.js\" \"public/**/*.{html,css}\""
  },
  "keywords": ["art", "generative", "audio", "web-audio-api", "shipping-forecast"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "eslint": "^8.55.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1"
  }
}
